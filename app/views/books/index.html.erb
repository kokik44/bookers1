

<div class="new-inner">
<h1>Books</h1>
<div class="booker-past">
<table>
  <thread>
    <tr>
       <th>title</th>
       <th>body</th>
    </tr>
  </thread>
  <tbody>
  <% @books.each do |book| %>
    <tr>
    <td class="title"><%= book.title %></td>
    <td class="body"><%= book.body %></td>
    <td class="booker-footer">
    <%= link_to "show", book_path(book) %>
    <%= link_to "edit", edit_book_path(book) %>
    <%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure ?" %>
  </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>


<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <%= @book.errors.count %>error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="new_booker">
  <h2>New Book</h2>
<%= form_with model:@book, local: true do |f|%>

  <h4>title</h4>
  <div><%= f.text_field :title %></div>
  <h4>body</h4>
  <div><%= f.text_area :body %></div>
  <%= f.submit 'Create Book' %>
<% end %>
</div>