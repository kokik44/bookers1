<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Editing book</h1>

<%= form_with model:@book, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<div class="edit-footer">
   <%= link_to "show", book_path(@book) %>
  <%= link_to "back", books_path %>
</div>